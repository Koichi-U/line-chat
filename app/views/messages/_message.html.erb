<% if @day.strftime('%Y/%m/%d') != message.created_at.strftime('%Y/%m/%d') %>
  <% @day = message.created_at %>
  <p><%= message.created_at.strftime('%Y/%m/%d') %></p>
<% end %>
<% if message.user_id.nil? %>
  <div class="receive d-flex flex-row align-items-center justify-content-start">
    <img src="<%= lineuser.pictureurl %>" class="rounded-circle w-10" width="36" height="36">
    <p class="m-0" style="width: 400px; word-break: break-word; overflow-wrap: break-word;"><%= message.message %></p>
    <div class="post-time small">
      <p class="m-0"><%= message.created_at.strftime('%Y/%m/%d') %></p>
      <p class="m-0"><%= message.created_at.strftime('%H:%M') %></p>
    </div>
  </div>
<% else %>
  <div class="receive d-flex flex-row align-items-center justify-content-start">
    <div class="post-time small">
      <p class="m-0"><%= message.created_at.strftime('%Y/%m/%d') %></p>
      <p class="m-0"><%= message.created_at.strftime('%H:%M') %></p>
    </div>
    <p class="m-0" style="width: 400px; word-break: break-word; overflow-wrap: break-word;"><%= message.message %></p>
  </div>
<% end %>
