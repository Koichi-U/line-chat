<div class="list-group">
  <% @lineusers.each do |l| %>
    <% if l.read %>
      <a href="<%= chat_path(l.userid) %>" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= l.displayname %></h5>
          <small><%= l.lastmessagetime.strftime('%Y/%m/%d %H:%M') %></small>
          <span class="badge bg-primary rounded-pill"><%= l.readcount %></span>
        </div>
        <p class="mb-1"><%= l.lastmessage %></p>
      </a>
    <% else %>
      <a href="<%= chat_path(l.userid) %>" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= l.displayname %></h5>
          <small><%= l.lastmessagetime %></small>
          <span class="badge bg-primary rounded-pill"><%= l.readcount %></span>
        </div>
        <p class="mb-1"><%= l.lastmessage %></p>
      </a>
    <% end %>
  <% end %>
</div>