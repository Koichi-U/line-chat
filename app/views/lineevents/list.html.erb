<div class="list-group">
  <% @lineusers.each do |l| %>
    <a href="<%= chat_path(l.userid) %>" class="list-group-item list-group-item-action active" aria-current="true">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1"><%= l.displayname %></h5>
        <small><%= Chat.where(lineuser_id: l.userid).order(updated_at: :desc).limit(1).created_at %></small>
      </div>
      <p class="mb-1"><%= Chat.where(lineuser_id: l.userid).order(updated_at: :desc).limit(1).created_at %></p>
    </a>
  <% end %>
</div>