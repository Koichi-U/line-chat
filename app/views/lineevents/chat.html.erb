<% @chats.each do |c| %>
  <div class="chat">
    <%= c.lineuser_id %>
    <%= c.message %>
  </div>
<% end %>

<%= form_for(@chat, url: {controller: 'lineevents', action: 'messagecreate' }) do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :lineuser_id, value: Lineuser.find_by(userid: params[:userid]).id %>
  <%= f.submit %>
<% end %>